{
    /* General */
    "editor.fontFamily": "Consolas, Courier New, monospace, Droid Sans Mono, Droid Sans Fallback",
    "terminal.integrated.fontSize": 15,
    "window.zoomLevel": 0,
    "editor.minimap.enabled": false,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "editor.multiCursorModifier": "alt",

    /* Python */
	// "python.pythonPath": "C:\\Users\\parih\\AppData\\Local\\Programs\\Python\\Python37-32\\python.exe",
	"python.pythonPath": "/usr/bin/python3",
	"python.linting.pylintEnabled": false,
	"python.linting.enabled": false,
    
    /* Indention */
    "editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"python.dataScience.allowLiveShare": true,
	"files.exclude": {
		"**/.classpath": true,
		"**/.project": true,
		"**/.settings": true,
		"**/.factorypath": true
	},
	"python.linting.banditEnabled": false,
	"python.linting.flake8Enabled": false,
	"python.linting.mypyEnabled": false,
	"python.linting.pep8Enabled": false,
	"python.linting.prospectorEnabled": true
}
